{
  "name": "ts-template",
  "version": "1.0.0",
  "description": "A bare bone nodejs typescript setup.",
  "main": "src/app.ts",
  "scripts": {
    "build": "rm -rf build && tsc --project tsconfig.json && tscpaths -p tsconfig.json -s ./src -o ./build",
    "dev": "ts-node-dev --respawn -r tsconfig-paths/register src/app.ts",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watchAll"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kenjox/node-ts-template.git"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "starterkit"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kenjox/node-ts-template/issues"
  },
  "homepage": "https://github.com/kenjox/node-ts-template#readme",
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "jest": "^29.4.2",
    "ts-jest": "^29.0.5",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.1.2",
    "tscpaths": "^0.0.9",
    "typescript": "^4.9.5"
  }
}
